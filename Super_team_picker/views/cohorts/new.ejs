<%- include('../partials/header.ejs') %>
<div class="container">
    <h1>New Cohort</h1>
    <form action="/cohorts" method="POST">
        <div class="form-group">
            <label class="col-sm-2 col-form-label col-form-label-lg">Logo Url</label>
            <input type="url" class="form-control form-control-lg" name= "logoUrl" placeholder="e.g. https://www.example.com/some.jpg">
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-label col-form-label-lg">Name</label>
            <input type="text" class="form-control form-control-lg" name="name" placeholder="WADD">
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-label col-form-label-lg">Members</label>
            <textarea type="text" class="form-control"  name="members" placeholder="Prabhjot, Harsimran, Jasveer, Bhagwant" rows="2"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-lg" value="submit">Submit</button>
    </form>
</div>
<%- include('../partials/footer.ejs') %>
